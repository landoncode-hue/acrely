{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js TypeScript Config",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "jsx": "preserve",
    "module": "ESNext",
    "plugins": [{ "name": "next" }],
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
