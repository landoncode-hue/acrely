# ========================================
# Acrely Environment Configuration
# ========================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit the .env or .env.local file to version control

# ========================================
# Supabase Configuration
# ========================================
# Get these from your Supabase project dashboard: https://app.supabase.com
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_ACCESS_TOKEN=your-access-token

# Next.js Public Variables (accessible in browser)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ========================================
# Termii SMS API Configuration
# ========================================
# Get API credentials from: https://termii.com
TERMII_API_KEY=your-termii-api-key
TERMII_SENDER_ID=PBuilders
TERMII_API_URL=https://v3.api.termii.com

# ========================================
# Storage Configuration
# ========================================
RECEIPT_BUCKET=receipts
DOCUMENTS_BUCKET=documents

# ========================================
# Application Configuration
# ========================================
SITE_URL=http://localhost:3000
ENVIRONMENT=development
APP_NAME=Acrely

# Organization Identity
COMPANY_NAME=Pinnacle Builders Homes & Properties
COMPANY_EMAIL=info@pinnaclegroups.ng
COMPANY_PHONE=+234XXXXXXXXXX
COMPANY_ADDRESS=Lagos, Nigeria
COMPANY_SLOGAN=Building Trust, One Estate at a Time
ORG_ID=PBLD001

# ========================================
# Commission & Payment Settings
# ========================================
# Default commission percentage (can be overridden in settings table)
DEFAULT_COMMISSION_PERCENT=2.5
DEFAULT_PLOT_PRICE=500000

# ========================================
# Email Configuration (Optional - for notifications)
# ========================================
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@acrely.com

# ========================================
# Sentry Error Tracking (Optional)
# ========================================
SENTRY_DSN=

# ========================================
# Feature Flags
# ========================================
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_AUTO_RECEIPTS=true

# ========================================
# Security
# ========================================
JWT_SECRET=your-jwt-secret-here
SESSION_TIMEOUT_HOURS=24

# ========================================
# Deployment Configuration
# ========================================
# For CI/CD deployment
FTP_SERVER=ftp.pinnaclegroups.ng
FTP_USERNAME=your-ftp-username
FTP_PASSWORD=your-ftp-password
FTP_PATH=public_html/acrely
